                <label for="FirstName">First Name:</label>
                <input id="txtFName"type="text" name="FirstName" value="" />
        </div>
         <div>
                <label for="LastName">Last Name:</label>
                <input id="txtLName"type="text" name="LastName" value="" />
          </div>
         <div>
                <label for="email">Email:</label>
                <input id="email"type="email" name="email" value="" />
          </div>
         <div>
                <label for="phone">Phone:</label>
                <input id="txtphone"type="number" name="Phone" value="" />
         </div>
         <div><input type="radio" class="message_pri" name="message_pri" value="1" /> Active</div>
         <div><input type="radio" class="message_pri" name="message_pri" value="0" /> Inactive</div>
