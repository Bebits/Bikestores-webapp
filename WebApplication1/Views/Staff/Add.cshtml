@using WebApplication1.ViewModel
@{
    ViewBag.Title = "Add";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script type="text/javascript">
    $(function () {
        $("#btnPost").click(function () {
            var staff = new Object();
            staff.first_name = $('#txtFName').val();
            staff.last_name = $('#txtLName').val();
            staff.email = $('#txtemail').val();
            staff.phone = $('#txtphone').val();
            /*staff.active = $('#txtactive').val();*/
            staff.active = $(".message_pri:checked").val();
            if (staff != null) {
                $.ajax({
                    type: "POST",
                    url: "/Staff/Add",
                    data: JSON.stringify(staff),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (response) {
                        if (response != null) {
                            alert("FirstName : " + response.first_name + ",LastName : " + response.last_name +
                                ", Email :" + response.email + ", Phone :" + response.phone + ", Active :" + response.active);
                        } else {
                            alert("Something went wrong");
                        }
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
                });
            }
        });
    });
</script>
<body>
   
    <div title="ADD STAFF">
        
