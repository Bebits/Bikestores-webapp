
@using WebApplication1.ViewModel
@model cpbModel

<h2>Create</h2>
<div>
    <button class="btn btn-danger" onclick="location.href = '@Url.Action("Index", "cpb")'" />Back
</div>
@using (Html.BeginForm("Add", "cpb", FormMethod.Post))
{
    @Html.ValidationSummary()
    <table class="center">

        <tr>
            <td>Product Name: </td>
            <td>@Html.TextBoxFor(m => m.ProductName)</td>

        </tr>
        <tr>
            <td>Model year </td>
            <td>@Html.TextBoxFor(m => m.ModelYear)</td>
        </tr>
        <tr>
            <td>List price </td>
            <td>@Html.TextBoxFor(m => m.ListPrice)</td>
        </tr>
        <tr>
            <td>Category Name </td>
            <td>@Html.TextBoxFor(m => m.CategoryName)</td>
        <tr>
            <td>Brand name </td>
            <td>@Html.TextBoxFor(m => m.BrandName)</td>
        </tr>

        @*<tr>
                <td colspan="2"><input type="submit" value="Submit Form" /></td>
            </tr>*@
    </table>
    <div>
        <p align="center">
            <button id="btnsubmit" type="submit" class="btn btn-success" value="Add">SUBMIT</button>
            </p></div>
            <script src="~/Scripts/jquery-3.4.1.js"></script>

            <script type="text/javascript">
                $('#btnsubmit').click(function () {
                    alert('Successfully Submitted');
                });
            </script>
            <style>
                table.center {
                    width: 70%;
                    margin-left: 15%;
                    margin-right: 15%;
                }
            </style>



            }

